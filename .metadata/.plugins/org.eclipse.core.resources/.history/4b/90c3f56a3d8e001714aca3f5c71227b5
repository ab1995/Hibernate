package edu.hibernate.inheritance;

import org.hibernate.Session;
import org.hibernate.SessionFactory;
import org.hibernate.Transaction;
import org.hibernate.cfg.Configuration;

import edu.hibernate.inheritance.concretes.Bike;
import edu.hibernate.inheritance.concretes.Car;
import edu.hibernate.inheritance.concretes.Vehicle;


/*import edu.hibernate.inheritance.concrete.Bike;
import edu.hibernate.inheritance.concrete.Car;
import edu.hibernate.inheritance.concrete.Vehicle;*/

/*import edu.hibernate.inheritance.singletable.Bike;
import edu.hibernate.inheritance.singletable.Car;
import edu.hibernate.inheritance.singletable.Vehicle;*/


public class App 
{
    public static void main( String[] args )
    {
    	Configuration configure=new Configuration();
        configure.configure("hibernate.cfg.xml");
        SessionFactory sessionFactory=configure.buildSessionFactory();
        
        Session session=sessionFactory.openSession();
        Transaction tx=session.beginTransaction();
        Vehicle v1=new Vehicle();
        v1.setOwner("Tom");
        
        Car c1=new Car();
        c1.setOwner("John");
        c1.setType("sedan");
        
        
        Bike b1=new Bike();
        b1.setOwner("Adam");
        b1.setBrake("disc");
        
        session.persist(v1);
        session.persist(c1);
        session.persist(b1);
        tx.commit();
        session.close();
        
        
        sessionFactory.close();
    }
}
